@model MyPersonnalBlog.Models.User
@{
    ViewBag.Title = "Page Authentification";
}
<style>
    html,
    body {
        height: 100%;
    }

    .navbar{
        display:none;
    }

    body {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-align: center;
        -ms-flex-pack: center;
        -webkit-box-align: center;
        align-items: center;
        -webkit-box-pack: center;
        justify-content: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    footer p {
        text-align: center;
    }
</style>
@using (Html.BeginForm("Index", "Authentification", FormMethod.Post,
                                    new { enctype = "multipart/form-data", @Class = "form-signin" }))
{
    <h1 class="h3 mb-3 font-weight-normal">Veuillez ouvrir une session</h1>
    @Html.ValidationSummary(true, "Usager non trouvé ou bien mauvais mot de passe")
    <label for="Usager" class="sr-only">Courriel</label>
    @Html.LabelFor(d => d.Username, "Usager")
    @Html.TextBoxFor(d => d.Username, new { @Class = "form-control", placeholder = "Usager", required = "", autofocus = "" })
    @Html.LabelFor(d => d.Password, "Mot de passe")
    @Html.TextBoxFor(d => d.Password, new { type = "password", @Class = "form-control", placeholder = "Mot de passe", required = "" })
    <button class="btn btn-lg btn-primary btn-block" type="submit">Ouvrir Session</button>
}
